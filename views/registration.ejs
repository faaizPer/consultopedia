    <div class="container small">
        <h1>Registration Form</h1>


        <div class="row">
            <div class="col"></div>
            
            <div class="col-sm-12">

                <form action="/register" onsubmit="return validateform()" method="post">
                    <div class="form-group">
                        <label for="forName">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                    </div>
      
                    
                    <div class="form-group">
                        <label for="forName">Email ID</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="forName">Organization</label>
                        <input type="text" class="form-control" id="formEmail" name="organization" placeholder="Organization" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="forName">Address</label>
                        <input type="text" class="form-control" id="formEmail" name="address" placeholder="Address" required>
                    </div>
                    
                    <div class="form-group">
                      <div class="row custom-row" >
                        <div class="col-sm-4">
                          <input type="text" class="form-control raw" name="country" placeholder="Country" required>
                        </div>
                        <div class="col-sm-4">
                          <input type="number" class="form-control raw" name="pincode" id="formEmail" placeholder="Pincode" required></div>
                        
                      </div>
                        
                        
                        
                        
                    </div>
                    
                    <div class="form-group">
                        <label for="forName">Contact</label>
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone Number" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="forName">Aadhar Card Details</label>
                        <input type="text" class="form-control" id="aadhar" name="aadharNum" placeholder="Aadhar number" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="forName">Password</label>
                        <input type="text" class="form-control" name="password" id="password=" placeholder="min 6 characters" required/>
                        <input type="text" class="form-control" id="formEmail" placeholder="Repeat Password" required>
                        
                    </div>

                    <div class="form-group">
                      <label for="forName">Role</label>
                      <input type="text" class="form-control" name="role" placeholder="Role" required>
                  </div>

                    <input class="btn btn-primary btn-lg btnCenter"  type="submit" value="Register ME !" required/>
                    
                </form>

            </div>
